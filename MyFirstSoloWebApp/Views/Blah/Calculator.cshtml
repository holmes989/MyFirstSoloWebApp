@{
    ViewData["Title"] = "Calculator Page";
}

@model CalculatorModel

<!-- Grade Calculator form -->
<h2>Grade Calculator</h2>
<form method="post">
    <label>Assignments</label>
    <input id="txtAssign" asp-for="Assign" /><br />
    <label>Group Project</label>
    <input id="txtGrp" asp-for="Grp" /><br />
    <label>Quizzes</label>
    <input id="txtQz" asp-for="Qz"/><br />
    <label>Exams</label>
    <input id="txtXm" asp-for="Xm" /><br />
    <label>INTEX</label>
    <input id="txtNtx" asp-for="Ntx"/><br />
    <input id="btnSend" type="submit" value="Calculate Score" />

    <div asp-validation-summary="All"></div>
</form>
